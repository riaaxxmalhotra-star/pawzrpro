generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Using String types for role/status fields for compatibility
// Valid values:
// - Role: OWNER, LOVER, VET, GROOMER, SUPPLIER, ADMIN
// - BookingStatus: PENDING, ACCEPTED, DECLINED, CANCELLED, COMPLETED
// - OrderStatus: PENDING, CONFIRMED, SHIPPED, DELIVERED, CANCELLED
// - ServiceType: WALKING, SITTING, BOARDING
// - ProviderType: LOVER, VET, GROOMER

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String?
  name          String?
  role          String    @default("OWNER")
  avatar        String?
  phone         String?
  address       String?
  city          String?
  zipCode       String?
  bio           String?
  verified      Boolean   @default(false)
  suspended     Boolean   @default(false)
  profileComplete Boolean @default(false)
  aadhaarImage    String?
  aadhaarVerified Boolean  @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // OAuth & Verification
  emailVerified DateTime?
  phoneVerified DateTime?
  accounts      Account[]
  sessions      Session[]

  // Role-specific profiles
  loverProfile    LoverProfile?
  vetProfile      VetProfile?
  groomerProfile  GroomerProfile?
  supplierProfile SupplierProfile?

  // Relations
  pets              Pet[]
  bookingsAsOwner   Booking[]       @relation("OwnerBookings")
  bookingsAsProvider Booking[]      @relation("ProviderBookings")
  services          Service[]
  products          Product[]
  ordersAsBuyer     Order[]         @relation("BuyerOrders")
  ordersAsSupplier  Order[]         @relation("SupplierOrders")
  reviewsGiven      Review[]        @relation("ReviewerReviews")
  reviewsReceived   Review[]        @relation("TargetReviews")
  conversations     ConversationParticipant[]
  messages          Message[]
  notifications     Notification[]
  eventsCreated     Event[]         @relation("EventCreator")
  eventRSVPs        EventRSVP[]
  prescriptionsAsVet    VetPrescription[] @relation("VetPrescriptions")
  prescriptionsAsOwner  VetPrescription[] @relation("OwnerPrescriptions")
  patientRecords    PatientRecord[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Role-specific profiles
model LoverProfile {
  id             String   @id @default(cuid())
  userId         String   @unique
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  experience     String?
  certifications String?
  hourlyRate     Float?
  availability   String?  // JSON string for weekly availability
  serviceRadius  Int?     // miles
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model VetProfile {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  clinicName      String?
  clinicAddress   String?
  clinicPhone     String?
  hours           String?  // JSON string for hours
  license         String?
  licenseVerified Boolean  @default(false)
  services        String?  // JSON array of services
  specializations String?
  videoCallRate   Float?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model GroomerProfile {
  id           String   @id @default(cuid())
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  salonName    String?
  salonAddress String?
  salonPhone   String?
  hours        String?  // JSON string for hours
  services     String?  // JSON array of services with prices
  photos       String?  // JSON array of photo URLs
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model SupplierProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  storeName   String?
  description String?
  logo        String?
  website     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Pet {
  id            String   @id @default(cuid())
  ownerId       String
  owner         User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  name          String
  species       String   // dog, cat, bird, etc.
  breed         String?
  age           Int?
  weight        Float?
  photo         String?
  medicalNotes  String?
  behaviorNotes String?
  vaccinated    Boolean  @default(false)
  neutered      Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  bookings       Booking[]
  prescriptions  VetPrescription[]
  patientRecords PatientRecord[]
}

model Service {
  id           String      @id @default(cuid())
  providerId   String
  provider     User        @relation(fields: [providerId], references: [id], onDelete: Cascade)
  type         String
  name         String
  description  String?
  price        Float
  duration     Int         // in minutes
  availability String?     // JSON for availability slots
  active       Boolean     @default(true)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  bookings Booking[]
}

model Booking {
  id           String        @id @default(cuid())
  ownerId      String
  owner        User          @relation("OwnerBookings", fields: [ownerId], references: [id])
  providerId   String
  provider     User          @relation("ProviderBookings", fields: [providerId], references: [id])
  providerType String
  petId        String?
  pet          Pet?          @relation(fields: [petId], references: [id])
  serviceId    String?
  service      Service?      @relation(fields: [serviceId], references: [id])
  date         DateTime
  time         String
  duration     Int           // in minutes
  status       String        @default("PENDING")
  price        Float
  notes        String?
  videoRoomUrl String?       // For vet video calls
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  review Review?
}

model Product {
  id          String   @id @default(cuid())
  supplierId  String
  supplier    User     @relation(fields: [supplierId], references: [id], onDelete: Cascade)
  name        String
  description String?
  price       Float
  photos      String?  // JSON array of photo URLs
  category    String
  inventory   Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  orderItems OrderItem[]
}

model Order {
  id              String      @id @default(cuid())
  buyerId         String
  buyer           User        @relation("BuyerOrders", fields: [buyerId], references: [id])
  supplierId      String
  supplier        User        @relation("SupplierOrders", fields: [supplierId], references: [id])
  status          String      @default("PENDING")
  subtotal        Float
  platformFee     Float       // 2% of subtotal
  total           Float
  shippingAddress String
  shippingCity    String?
  shippingZip     String?
  trackingNumber  String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  items  OrderItem[]
  review Review?
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Float   // Price at time of purchase

  @@unique([orderId, productId])
}

model Review {
  id         String   @id @default(cuid())
  reviewerId String
  reviewer   User     @relation("ReviewerReviews", fields: [reviewerId], references: [id])
  targetId   String
  target     User     @relation("TargetReviews", fields: [targetId], references: [id])
  bookingId  String?  @unique
  booking    Booking? @relation(fields: [bookingId], references: [id])
  orderId    String?  @unique
  order      Order?   @relation(fields: [orderId], references: [id])
  rating     Int      // 1-5
  comment    String?
  createdAt  DateTime @default(now())
}

model Conversation {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  participants ConversationParticipant[]
  messages     Message[]
}

model ConversationParticipant {
  id             String       @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  userId         String
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  joinedAt       DateTime     @default(now())
  lastReadAt     DateTime?

  @@unique([conversationId, userId])
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  senderId       String
  sender         User         @relation(fields: [senderId], references: [id])
  content        String
  read           Boolean      @default(false)
  createdAt      DateTime     @default(now())
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String   // booking_request, booking_accepted, message, review, etc.
  title     String
  message   String
  link      String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String?
  date        DateTime
  endDate     DateTime?
  location    String
  address     String?
  city        String?
  image       String?
  featured    Boolean  @default(false)
  maxAttendees Int?
  createdById String
  createdBy   User     @relation("EventCreator", fields: [createdById], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  rsvps EventRSVP[]
}

model EventRSVP {
  id        String   @id @default(cuid())
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([eventId, userId])
}

model VetPrescription {
  id          String   @id @default(cuid())
  vetId       String
  vet         User     @relation("VetPrescriptions", fields: [vetId], references: [id])
  petId       String
  pet         Pet      @relation(fields: [petId], references: [id])
  ownerId     String
  owner       User     @relation("OwnerPrescriptions", fields: [ownerId], references: [id])
  medications String   // JSON array of medications
  diagnosis   String?
  notes       String?
  pdfUrl      String?
  createdAt   DateTime @default(now())
}

model PatientRecord {
  id        String   @id @default(cuid())
  vetId     String
  vet       User     @relation(fields: [vetId], references: [id])
  petId     String
  pet       Pet      @relation(fields: [petId], references: [id])
  notes     String
  diagnosis String?
  treatment String?
  createdAt DateTime @default(now())
}

model VerificationCode {
  id        String   @id @default(cuid())
  userId    String
  type      String   // 'email' or 'phone'
  code      String
  target    String   // email address or phone number
  expiresAt DateTime
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId, type])
  @@index([code, type])
}
